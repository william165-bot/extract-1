<section class="grid" style="gap:18px">
  <div class="card">
    <h2 class="title">Dashboard</h2>
    <% if (trialActive) { %>
      <p class="subtitle">Free trial active. Ends <strong><%= new Date(trialEndsAt).toLocaleString() %></strong>.</p>
    <% } %>
    <% if (premiumActive) { %>
      <p class="subtitle">Premium active. Expires <strong><%= new Date(premiumUntil).toLocaleString() %></strong>.</p>
    <% } %>
    <% if (!trialActive && !premiumActive) { %>
      <p class="subtitle">Your trial has ended. Upgrade to continue.</p>
      <a class="btn primary" href="/upgrade">Upgrade now</a>
    <% } %>
  </div>

  <% if (canAccess) { %>
    <div class="card">
      <h3 class="title">Nethunt URL Extractor</h3>
      <p class="subtitle">Embedded tool, visually cropped at the top for a clean experience.</p>
      <div class="iframe-wrap">
        <iframe class="cropped-iframe" src="<%= embedUrl %>" loading="lazy" referrerpolicy="no-referrer"></iframe>
      </div>
    </div>
  <% } else { %>
    <div class="card">
      <h3 class="title">Access locked</h3>
      <p class="subtitle">Upgrade to premium to unlock the embedded tool immediately.</p>
      <div class="form-actions">
        <a class="btn primary" href="/pay">Make payment</a>
        <span class="small">After successful payment, you will be redirected back and premium will unlock for 1 month.</span>
      </div>
    </div>
  <% } %>
</section>
